<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.yunus.halisaham.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GİRİŞ YAP"
        android:id="@+id/btnKayitOl"
        android:elevation="10dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hesabınız yok mu? Hemen kaydolun!"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Şifre"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/edittextSifre"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_create_black_24dp"
        android:textSize="20dp"
        android:layout_below="@+id/edittextMail"
        android:layout_alignParentStart="true"
        android:password="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/edittextMail"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_markunread_black_24dp"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
